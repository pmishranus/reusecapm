    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.15.2",
        "@sap/cds": "^8",
        "@sap/cds-hana": "^2",
        "@sap/hdi": "^4.7.0",
        "@sap/hdi-deploy": "^5.4.2",
        "@sap/xsenv": "^5.5.0",
        "@sap/xssec": "^3.6.1",
        "cors": "^2.8.5",
        "date-fns": "^3.6.0",
        "express": "^4",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.47",
        "multer": "^1.4.5-lts.1",
        "node-fetch": "^2.6.1",
        "node-jose": "^2.2.0",
        "passport": "^0.7.0",
        "path": "^0.12.7",
        "recursive-readdir": "^2.2.3",
        "sap-hdbext-promisfied": "^2.202405.1",
