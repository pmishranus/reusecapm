{
    "name": "employee-master",
    "version": "1.0.0",
    "description": "Employee Master Data CAPM Application - Standalone Service",
    "main": "index.js",
    "scripts": {
        "start": "cds run",
        "build": "cds build",
        "deploy": "cds deploy",
        "watch": "cds watch",
        "test": "npm run test:unit",
