        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "globals": "^16.2.0",
        "prettier": "^3.5.3",
        "sqlite3": "^5.1.0",
        "jest": "^29.0.0"
    },
    "cds": {
        "requires": {
            "db": {
                "kind": "hana"
            },
            "auth": {
                "kind": "xsuaa"
            }
        },
        "provides": {
            "EmployeeService": {
                "kind": "odata",
                "model": "srv/employee-service"
            }
        }
    },
    "engines": {
        "node": ">=18.0.0"
    }
}